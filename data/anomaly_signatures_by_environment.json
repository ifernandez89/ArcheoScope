{
  "metadata": {
    "version": "1.0.0",
    "description": "Firmas instrumentales de anomalías arqueológicas por tipo de ambiente",
    "purpose": "Definir umbrales científicos para detectar anomalías reales según instrumentos calibrados",
    "last_updated": "2026-01-24",
    "scientific_basis": "Basado en estudios de arqueología remota y firmas instrumentales documentadas"
  },
  
  "environment_signatures": {
    "desert": {
      "environment_type": "desert",
      "description": "Desiertos áridos - alta visibilidad, baja vegetación",
      "primary_instruments": ["landsat_thermal", "modis_lst", "sentinel2", "sar"],
      "archaeological_indicators": {
        "thermal_anomalies": {
          "description": "Estructuras enterradas tienen diferente inercia térmica que arena",
          "threshold_day_night_delta_k": 5.0,
          "expected_pattern": "Anomalías térmicas persistentes en mismo lugar día/noche",
          "confidence_high": "> 8K diferencia",
          "confidence_moderate": "5-8K diferencia",
          "false_positive_risk": "Rocas naturales, dunas"
        },
        "modis_thermal_inertia": {
          "description": "MODIS LST proporciona inercia térmica de alta resolución",
          "threshold_thermal_inertia_k": 8.0,
          "expected_pattern": "Alta inercia térmica indica materiales compactos (piedra, mampostería)",
          "confidence_high": "> 12K inercia térmica",
          "confidence_moderate": "8-12K inercia térmica",
          "false_positive_risk": "Afloramientos rocosos naturales"
        },
        "sar_backscatter": {
          "description": "Estructuras enterradas alteran rugosidad superficial",
          "threshold_db": -3.0,
          "expected_pattern": "Patrones geométricos en backscatter",
          "confidence_high": "Geometría regular + contraste > 5dB",
          "confidence_moderate": "Contraste 3-5dB",
          "false_positive_risk": "Afloramientos rocosos naturales"
        },
        "ndvi_stress": {
          "description": "Vegetación escasa muestra estrés sobre estructuras",
          "threshold_ndvi_delta": 0.15,
          "expected_pattern": "Vegetación suprimida en patrones geométricos",
          "confidence_high": "NDVI < 0.2 con geometría",
          "confidence_moderate": "NDVI 0.2-0.3",
          "false_positive_risk": "Zonas naturalmente áridas"
        }
      },
      "minimum_convergence": 2,
      "notes": "Landsat + MODIS LST proporcionan cobertura térmica completa. Requiere al menos 2 instrumentos convergentes."
    },
    
    "forest": {
      "environment_type": "forest",
      "description": "Bosques y selvas - vegetación densa, requiere penetración",
      "primary_instruments": ["lidar", "sentinel2", "sar"],
      "archaeological_indicators": {
        "lidar_elevation_anomalies": {
          "description": "Montículos artificiales detectables bajo dosel",
          "threshold_height_m": 1.2,
          "expected_pattern": "Elevaciones geométricas no explicables por topografía natural",
          "confidence_high": "> 3m altura con geometría regular",
          "confidence_moderate": "1.2-3m altura",
          "false_positive_risk": "Termiteros, formaciones naturales"
        },
        "ndvi_canopy_gaps": {
          "description": "Claros en vegetación sobre estructuras enterradas",
          "threshold_ndvi_delta": 0.12,
          "expected_pattern": "Vegetación suprimida o alterada en patrones no naturales",
          "confidence_high": "NDVI delta > 0.25 con geometría",
          "confidence_moderate": "NDVI delta 0.12-0.25",
          "false_positive_risk": "Claros naturales, agricultura"
        },
        "sar_l_band_penetration": {
          "description": "SAR L-band penetra vegetación, detecta estructuras",
          "threshold_coherence": 0.35,
          "expected_pattern": "Alta coherencia en patrones geométricos bajo dosel",
          "confidence_high": "Coherencia > 0.6 con geometría",
          "confidence_moderate": "Coherencia 0.35-0.6",
          "false_positive_risk": "Afloramientos rocosos"
        }
      },
      "minimum_convergence": 2,
      "notes": "LiDAR es crítico - sin LiDAR, confianza baja. Umbrales ajustados para detectar sitios bajo vegetación densa."
    },
    
    "glacier": {
      "environment_type": "glacier",
