        "nsidc_snow_cover": {
          "description": "Cobertura de nieve - accesibilidad y preservación",
          "threshold_snow_cover": 0.5,
          "expected_pattern": "Cobertura de nieve persistente",
          "confidence_high": "> 0.8 cobertura",
          "confidence_moderate": "0.5-0.8 cobertura",
          "false_positive_risk": "Variabilidad estacional"
        },
        "modis_thermal_ice": {
          "description": "Inercia térmica en hielo - objetos enterrados",
          "threshold_thermal_inertia_k": 3.0,
          "expected_pattern": "Anomalías térmicas persistentes en hielo",
          "confidence_high": "> 6K diferencia día-noche",
          "confidence_moderate": "3-6K diferencia",
          "false_positive_risk": "Grietas, agua subglacial, rocas"
        }
      },
      "minimum_convergence": 2,
      "notes": "ICESat-2 + NSIDC + MODIS LST proporcionan cobertura completa para criosfera"
    },
    
    "shallow_sea": {
      "environment_type": "shallow_sea",
